<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Welcome Movies"
        android:textSize="18sp"
        android:textColor="@color/c1"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:textStyle="bold|italic"
        android:layout_marginTop="40dp"






        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Search By Category "
        android:textSize="10sp"
        android:textColor="@color/c1"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:textStyle="bold|italic"







        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner0"
        android:layout_marginBottom="8dp"



        ></Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Search By Year "
        android:textSize="10sp"
        android:textColor="@color/c1"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:textStyle="bold|italic"







        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:layout_marginBottom="8dp"

        ></Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Search By Name "
        android:textSize="10sp"
        android:textColor="@color/c1"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:textStyle="bold|italic"







        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_marginBottom="8dp"

        ></Spinner>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Movies Information By Category"
        android:id="@+id/btnGetMoviescat"
        android:onClick="btnGetMoviesOnClick"
        android:layout_marginBottom="10dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Movies Information By year"
        android:id="@+id/btnGetMoviesyear"
        android:onClick="btnGetMoviesOnClickyear"
        android:layout_marginBottom="10dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Movies Information By Name"
        android:id="@+id/btnGetMoviesname"
        android:onClick="btnGetMoviesOnClickname"
        android:layout_marginBottom="10dp"

        />





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext"
            android:textSize="20sp"
            android:textAlignment="center"
            />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext1"
        android:textSize="20sp"
        android:textAlignment="center"
        />




    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_button_android"
        android:layout_centerVertical="true"
        android:src="@drawable/pic1"
        android:layout_centerHorizontal="true" />


</LinearLayout>